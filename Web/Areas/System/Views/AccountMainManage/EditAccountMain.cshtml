                    </td>
                    <td>@Html.ValidationMessageFor(a => a.AndroidDownloadPath)
                    </td>
                </tr>
                <tr>
                    <td>
                        Android用户端版本号：
                    </td>
                    <td>
                        @Html.TextBoxFor(a => a.AndroidVersion)
                    </td>
                    <td>@Html.ValidationMessageFor(a => a.AndroidVersion)
                    </td>
                </tr>
                <tr>
                    <td>

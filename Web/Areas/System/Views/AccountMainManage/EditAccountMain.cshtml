                    <td>@Html.ValidationMessageFor(a => a.FileLimit)
                    </td>
                </tr>
                <tr>
                    <td>
                        地址：
                    </td>
                    <td>@Html.TextBoxFor(a => a.SaleAddress)
                    </td>
                    <td>@Html.ValidationMessageFor(a => a.SaleAddress)
                    </td>
                </tr>
                <tr>
                    <td>
                        IOS下载地址：<br />

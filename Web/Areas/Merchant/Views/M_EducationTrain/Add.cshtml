                    <td class="tdField">@Html.TextBoxFor(a => a.Price, new { style = "width:100px" })/@Html.TextBoxFor(a => a.PriceRemark, new { style = "width:50px"})
                    </td>
                    <td>@Html.ValidationMessageFor(a => a.Price)

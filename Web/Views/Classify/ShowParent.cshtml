@{
    Layout = null; 
}
<script src="@Url.Content("~/Scripts/jquery-1.8.3.min.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/Style.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Scripts/treeview/jquery.treeview.css")" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="@Url.Content("~/Scripts/treeview/jquery.treeview.js")"></script>
<script>
        
        $(function () { 
            
             $("#browser").treeview({
                toggle: function () {
                },
                collapsed: false,
            });

        });

        function CkSel(id)
        {
            $("#"+id).attr("checked","true");

            $("a").each(function(n,m){
                $(m).removeClass("aBgColor");
            });
            $("#a"+id).addClass("aBgColor");

        }

</script>
<style type="text/css">
    .lefClass
    {
        width: 300px;
        height: 520px;
        font-size: 12px;
        border: 1px solid #ebebeb;
        overflow: auto;
        padding: 10px 10px 0px 10px;
        line-height: 5px;
    }
    .aBgColor
    {
        background-color: #00aec8;
        color: #fff !important;
    }
</style>
<div class="lefClass operation">
    <ul id='browser' style="width: 300%">
        @Html.Raw(ViewBag.TreeView)
    </ul>
</div>

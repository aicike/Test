@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section head{
    @RenderSection("head", required: false)
    <script type="text/javascript">

        //展示请稍后信息提示
        function ShowLayout_Later(Title, Text) {
            $("#Laypit_LaterText").text(Text);
            $("#Layout_Later").dialog({
                resizable: false,
                height: 100,
                width: 260,
                modal: true,
                draggable: false,
                title: Title,
                position: "center"
            });
            $(".ui-dialog-titlebar").hide();
        }
        //关闭请稍后信息提示
        function CloseLayout_Later() {
            $("#Layout_Later").dialog("close");
            $(".ui-dialog-titlebar").show();
        }
      
    </script>
}

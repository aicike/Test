@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";

    ViewBag.Menu2 = Poco.SystemConst.Menu.ExpressCollection;
}
@section head{
}
@model Poco.ExpressCollection
<div class="title">
    @Html.Partial("Menu3")
</div>
<div class="body">
    @using (Ajax.BeginForm("Edit", "ExpressCollection", new { HostName = ViewBag.HostName }, new AjaxOptions() { UpdateTargetId = "alert" }))
    {
        <fieldset style="font-size: 14px">
            <legend>创建活动</legend>
            <table style="width: 100%;">
                <tr>
                    <td class="tdTitle" style="width: 150px">
                        <span class="Identification">*</span> 单号
                    </td>
                    <td class="tdField">@Html.TextBoxFor(a => a.OddNumber, new { style = "width:300px" })
                    </td>
                    <td>@Html.ValidationMessageFor(a => a.OddNumber)
                        @Html.HiddenFor(a => a.AccountMainID)
                        @Html.HiddenFor(a => a.ID)
                        @Html.HiddenFor(a => a.EnumExpressStatus)
                        @Html.HiddenFor(a => a.EntryDate)
                    </td>
                </tr>
                <tr>
                    <td class="tdTitle" style="width: 150px">
                        <span class="Identification">*</span> 业主电话
                    </td>
                    <td class="tdField">@Html.TextBoxFor(a => a.Phone, new { style = "width:300px" })
                    </td>
                    <td>@Html.ValidationMessageFor(a => a.Phone)
                    </td>
                </tr>
            </table>
        </fieldset>
        <div class="action">
            <input type="submit" id="btnSubmit" value="保存" class="button" style="margin-right: 20px" /><input type="button" value="返回"  class="button" onclick="location.href='@ViewBag.RawUrl'" />
        </div>
    }
</div>

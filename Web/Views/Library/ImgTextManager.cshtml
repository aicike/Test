@{
    ViewBag.Title = "Index";
    Layout = null;
    List<Poco.LibraryImageText> mmageTextList = ViewBag.ImageTextList as List<Poco.LibraryImageText>;

}
<link href="@Url.Content("~/Content/themes/base/jquery-ui-1.10.2.custom.min.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~//Content/Style.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery-1.8.3.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.10.3.custom.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        $("#tabs").tabs();
    });
</script>
<style>
    .item
    {
        margin-bottom: 10px;
    }
    .tabdiv
    {
        height: 465px;
        overflow-y: auto;
    }
</style>
<div id="tabs" style="width: 793px; height: 523px;">
    <div id="tabs-ImgText" class="tabdiv">
        @foreach (var item in mmageTextList)
        {
            <div class="item">
                <input type="hidden" fileID="@item.ID" fileType="LibraryImageText" value="@Url.Content(item.ImagePath)" /><input
                    type="radio" name="radioImg" />&nbsp;&nbsp;<img style="max-width: 200px;max-height:200px;vertical-align:middle" src="@Url.Content(item.ImagePath)" />&nbsp;&nbsp;<label>@item.Title</label>
            </div>        
        }
    </div>
</div>

@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
    ViewBag.Menu2 = Poco.SystemConst.Menu.PropertyHouse;
    ViewBag.Menu3 = Poco.SystemConst.Menu.PropertyHouse;

}
@section head{
}
@model List<Poco.Property_User>
<div class="title">
    <div style="float: right">
        <a href="@Url.Content("~/Download/Property/房屋信息导入模板.xlsx")" target="_blank" style=" color:#00aec8">
            下载房屋信息导入模板</a></div>
    @Html.Partial("Menu3")
    <div style="clear: both">
    </div>
</div>
<div class="body">
    <div class="option">
        @using (Html.BeginForm("Index", "PropertyHouse", new { HostName = ViewBag.HostName }, FormMethod.Get))
        {
            <table style="width: 100%">
                <tr>
                    <td colspan="3" style="text-align: left">@Html.ActionLink("添加", "Add", "PropertyHouse", new { HostName = ViewBag.HostName }, null, true)<a
                        href="#" id="btnUpload" class="button" style="margin: 10px">导入</a>
                    </td>
                </tr>
                <tr>
                    <td>
                        房号：
                        <input type="text" id="houseNum" name="houseNum" />
                    </td>
                    <td>
                        缩写：
                        <input type="text" id="houseShortNo" name="houseShortNo" />
                    </td>
                    <td style="text-align: right">
                        <input type="submit" id="btnSubmit" value="查询" class="button" style="" />
                    </td>
                </tr>
            </table>
        }
    </div>
    <div style="margin-top: 10px;">
        <div style="float: left">
            总房屋数 @Model.TotalItemCount </div>
        <div class="pages" style="margin-bottom: 10px; float: right">
            @Html.Pager(Model, new PagerOptions
   {
       PageIndexParameterName = "ID",
       CurrentPagerItemWrapperFormatString = "<span class=\"pagenum_selected\"><a>{0}</a></span>",
       NumericPagerItemWrapperFormatString = "<span class=\"pagenum\">{0}</span>",
       NavigationPagerItemWrapperFormatString = "<span class=\"pagenum\">{0}</span>",
       CssClass = "manage_pages pages",
       SeparatorHtml = "&nbsp;",
       AutoHide = false,
       /*LastPageText = "Last",
       FirstPageText = "First",
       PrevPageText = "Back",
       NextPageText = "Next",*/
       PageIndexOutOfRangeErrorMessage = "Page index out of range.",
       ShowFirstLast = false
   })
        </div>
        <div style="clear: both">
        </div>
    </div>
    <table class="tableList" cellpadding="0" cellspacing="0" style="font-size: 14px">
        <tr>
            <th style="width: 80px;">
                楼号
            </th>
            <th style="width: 80px;">
                单元
            </th>
            <th style="width: 80px;">
                房号
            </th>
            <th style="width: 80px;">
                缩写
            </th>
            <th style="width: 120px;">
                操作
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.BuildingNum
                </td>
                <td>
                    @item.CellNum
                </td>
                <td>
                    @item.RoomNumber
                </td>
                <td>
                    @item.BuildingNum-@item.CellNum-@item.RoomNumber
                </td>
                <td class="operation">
                    @Html.ActionLink("业主信息", "Index", "PropertyUser", new { HostName = ViewBag.HostName, id = item.ID }, null, true)
                    @Html.ActionLink("修改", "Edit", "PropertyHouse", new { HostName = ViewBag.HostName, id = item.ID }, null, true)
                    @Ajax.ActionLink("删除", "Delete", "PropertyHouse", new { HostName = ViewBag.HostName, id = item.ID}, new AjaxOptions() { UpdateTargetId = "alert", OnBegin = "return AppDelete('确定删除?删除此项将会删除其关联的所有数据！','" + Url.Action("Delete", "PropertyHouse", new { HostName = ViewBag.HostName, id = item.ID }) + "',null)" }, true)
                </td>
            </tr>
        }
    </table>
    <div class="pages">
        @Html.Pager(Model, new PagerOptions
   {
       PageIndexParameterName = "ID",
       CurrentPagerItemWrapperFormatString = "<span class=\"pagenum_selected\"><a>{0}</a></span>",
       NumericPagerItemWrapperFormatString = "<span class=\"pagenum\">{0}</span>",
       NavigationPagerItemWrapperFormatString = "<span class=\"pagenum\">{0}</span>",
       CssClass = "manage_pages pages",
       SeparatorHtml = "&nbsp;",
       AutoHide = false,
       /*LastPageText = "Last",
       FirstPageText = "First",
       PrevPageText = "Back",
       NextPageText = "Next",*/
       PageIndexOutOfRangeErrorMessage = "Page index out of range.",
       ShowFirstLast = false
   })
    </div>
    @using (Html.BeginForm("Upload", "PropertyHouse", new { HostName = ViewBag.HostName }, FormMethod.Post, new { enctype = "multipart/form-data", id = "formFileUpload" }))
    {  
        <input type="file" style="visibility: hidden" id="fileUpload" name="file" />
    }
</div>

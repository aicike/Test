                    <td>@Html.DropDownListFor(a => a.ProvinceID)
                    </td>
                    <td>@Html.ValidationMessageFor(a => a.ProvinceID)
                    </td>
                </tr>
                <tr>
                    <td>
                        城市
                    </td>
                    <td>@Html.DropDownListFor(a => a.CityID)
                    </td>
                    <td>@Html.ValidationMessageFor(a => a.CityID)
                    </td>
                </tr>
                <tr>
                    <td>
                        地区

                    <td>@Html.DropDownListFor(a => a.DistrictID)
                    </td>
                    <td>@Html.ValidationMessageFor(a => a.DistrictID)
                    </td>
                </tr>
                <tr>
                    <td>
                        地理位置
                    </td>
                    <td colspan="2">

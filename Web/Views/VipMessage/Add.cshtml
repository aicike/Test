@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";

    ViewBag.Menu = Poco.SystemConst.Menu.VipMessage;
}
@section head{
    <script type="text/javascript">

        function checkPhone() {
            var phone = $("#phoneNum").val();
            if (phone == "" || phone == undefined) {
                JAlert({
                    Message: "电话不能为空！",
                    DialogType: "Ok",
                    BtnOk: "确定"
                });
                return false;
            }
            else {
                return true;
            }
        }
    </script>
}
@model Poco.VIPInfo
<div class="title">
    添加会员
</div>
<div class="bodyLeft">
    <ul class="ulList">
        <li class="select">@Html.ActionLink("会员管理", "Index", "VipMessage", new { HostName = ViewBag.HostName }, null, true)</li>
    </ul>
</div>
<div class="bodyRight" style="font-size: 14px">
    @using (Ajax.BeginForm("Add", "VipMessage", new { HostName = ViewBag.HostName }, new AjaxOptions() { UpdateTargetId = "alert"}))
    {
        <fieldset>
            <legend>基本信息</legend>
       
        <table class="tableForm">
            <tr>
                <td class="tdTitle">
                    <span class="Identification">*</span> 卡号
                </td>
                <td class="tdField">@Html.TextBoxFor(a => a.CardNumber)
                </td>
                <td>@Html.ValidationMessageFor(a => a.CardNumber)
                </td>
            </tr>
            <tr>
                <td class="tdTitle">
                    <span class="Identification">*</span> 电话
                </td>
                <td class="tdField">
                    <input type="text" id="phoneNum" name="phoneNum" />
                </td>
                <td>
                </td>
            </tr>
               <tr>
                <td class="tdTitle">
                    <span class="Identification">*</span> 初始金额
                </td>
                <td class="tdField">@Html.TextBoxFor(a => a.Balance)
                </td>
                <td>@Html.ValidationMessageFor(a => a.Balance)
                </td>
            </tr>
        </table>
         </fieldset>
        
        <div class="action">
            <input type="submit" id="btnSubmit" value="保存" onclick="return checkPhone()" class="button" style="margin-right: 20px" /><input type="button" value="返回"  class="button" onclick="location.href='@ViewBag.RawUrl'" />
        </div>
    }
</div>
<div style="clear: both">
</div>

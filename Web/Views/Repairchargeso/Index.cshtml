@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
    ViewBag.Menu2 = Poco.SystemConst.Menu.Repairchargeso;
}
@section head{
    <script>

    </script>
}
@model PagedList<Poco.Repairchargeso>
<div class="title">
    @Html.Partial("Menu3")
</div>
<div class="body">
  <div class="option">
        @Html.ActionLink("添加", "Add", "Repairchargeso", new { HostName = ViewBag.HostName }, null, true)
    </div>
    <table class="tableList" cellpadding="0" cellspacing="0" style="font-size: 14px">
        <tr>
            <th>
                收费项目
            </th>
            <th style="width: 120px">
                收费金额
            </th>
            <th style="width: 200px">
                创建日期
            </th>
            <th  style="width: 160px">
                操作
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProjectName</td>
                <td>@item.Price</td>
                <td>@item.GetDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td class="operation">
                 @Html.ActionLink("修改", "Edit", "Repairchargeso", new { HostName = ViewBag.HostName, ID = item.ID }, new { style = "padding-right:10px" }, true)
                    @Ajax.ActionLink("删除", "Delete", "Repairchargeso", new { HostName = ViewBag.HostName }, new AjaxOptions() { UpdateTargetId = "alert", OnBegin = "return AppDelete('确定删除?！','" + Url.Action("Delete", "Repairchargeso", new { HostName = ViewBag.HostName, ID = item.ID }) + "',null)" }, true)
                </td>
            </tr>
        }
    </table>
    <div class="pages">
        @Html.Pager(Model, new PagerOptions
            {
                PageIndexParameterName = "ID",
                CurrentPagerItemWrapperFormatString = "<span class=\"pagenum_selected\"><a>{0}</a></span>",
                NumericPagerItemWrapperFormatString = "<span class=\"pagenum\">{0}</span>",
                NavigationPagerItemWrapperFormatString = "<span class=\"pagenum\">{0}</span>",
                CssClass = "manage_pages pages",
                SeparatorHtml = "&nbsp;",
                AutoHide = false,
                /*LastPageText = "Last",
                FirstPageText = "First",
                PrevPageText = "Back",
                NextPageText = "Next",*/
                PageIndexOutOfRangeErrorMessage = "Page index out of range.",
                ShowFirstLast = false
            })
    </div>
</div>
<div style="clear: both">
</div>

        //生成软文
        function ShowAddress(id, Name) {
            $("#SMID_adver").val(id);
            $("#dialogShowRW").dialog({
                resizable: false,
                height: 150,
                width: 300,
                modal: true,
                draggable: false,
                title: Name,
                close: function (event, ui) {
                    $("#SMID_adver").val("");
                }
            });


        }

        //显示调查详细
        function ShowPInfo(id) {
            var src = '@Url.Action("SurveyUserList", "SurveyMain")';
            $("#iframeShowP").attr("src", src + "?SMID=" + id);
            $("#dialogShowP").dialog({
                resizable: false,
                height: 710,
                width: 760,

        //ajax 生成软文
        function SetAppAdver(client)
        {
            //client  1用户端 2销售端
            var id = $("#SMID_adver").val();
            var Url = '@Url.Action("SetAppAdverTorial", "SurveyMain")';
            $.post(Url, { id: id, client: client }, function (result) {


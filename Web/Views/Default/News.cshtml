@{
    ViewBag.Title = "News";
    Layout = null;
}
@model Poco.AppAdvertorial
<html>
<head>
    <meta http-equiv="Content-Type" content="application/xhtml+xml; charset=utf-8">
    <meta name="viewport" content="width=device-width, user-scalable=no" />
    <script src="@Url.Content("~/Scripts/jquery-1.8.3.min.js")" type="text/javascript"></script>
    <style>
        .title
        {
            font-weight: bolder;
            font-size: 1.25em;
        }
        .depict
        {
            font-size: 0.75em;
            line-height: 1.6em;
            word-break: break-all;
            word-wrap: break-word;
            background-color: #ebebeb;
            padding: 10px 10px 10px 10px;
        }
        .date
        {
            font-size: 0.75em;
            padding: 5px 0px 5px 0px;
        }
        .conter
        {
            font-size: 0.875em;
            word-break: break-all;
            word-wrap: break-word;
            line-height: 1.6em;
        }
        body
        {
            padding: 5px;
        }
        .image
        {
            padding: 10px 0px 5px 0px;
        }
        img
        {
            max-width: 100%;
        }
        .APPDow
        {
            margin-top: 25px;
            background-color: #00aec8;
            height: 35px;
            color: #ffffff;
            width: 100%;
            font-size: 12px;
            font-weight: bold;
            font-family: '微软雅黑';
        }
    </style>
</head>
<body>
    <div class="main">
        <div class="title">@Model.Title</div>
        <div class="date">@Model.IssueDate.ToString("yyyy-MM-dd")</div>
        <div class="depict">
            备注：@Model.Depict</div>
        <div class="image">
            <img src="@Poco.SystemConst.WebUrlIP@Url.Content(@Model.MainImagPath ?? "")" alt="@Model.Title" width="100%" />
        </div>
        <div class="conter">
            @Html.Raw(Model.Content)
        </div>
        @if (ViewBag.Utype == (int)Poco.Enum.EnumAdvertorialUType.UserEnd)
        { 
            <a id="Adowload" href="#" style="text-decoration: none">
                <table align="center" class="APPDow" cellpadding="0" cellspacing="0">
                    <tr>
                        <td align="center">
                            下载@(ViewBag.AMName)获取更多精彩资讯
                        </td>
                    </tr>
                </table>
            </a>
            
            <script>

                (function () {
                    var IPHONEURL = "@ViewBag.IOSURL";
                    var ANDROIDURL = "@ViewBag.AndroidURL";
                    var page = {};
                    page.init = function () {
                        page.initView();
                    };
                    page.initView = function () {
                        var ua = window.navigator.userAgent.toLowerCase();
                        if (ua.indexOf('android') != -1) {
                            $('#Adowload').attr("href", ANDROIDURL);
                        } else if (ua.indexOf('iphone') != -1) {
                            $('#Adowload').attr("href", IPHONEURL);
                        }
                        else
                        {
                            $('#Adowload').attr("href", "@Url.Action("QrCodeSkip", "Default", new { AMID = ViewBag.AMID })");
                            
                        }
                    };

                    page.init();
                })();

            </script>
            
        }
    </div>
</body>
</html>

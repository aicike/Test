@{
    ViewBag.Title = "Index";
    Layout = null;
    List<Poco.WebAPI_Poco.App_AutoMessageReplyContent> imageTextList = ViewBag.subImageTexts as List<Poco.WebAPI_Poco.App_AutoMessageReplyContent>;
}
<link href="@Url.Content("~/Content/themes/base/jquery-ui-1.10.2.custom.min.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~//Content/Style.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery-1.8.3.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.10.3.custom.min.js")" type="text/javascript"></script>
<script>
    $(function () {
        $("#accordion").accordion();

        $(".ui-accordion-content").css("height","auto");

    });
</script>
<style>
    img
    {
         max-width:100%;
        }
    .tableShow
    {
    }
    .tableShow td
    {
        padding-top: 5px;
        padding-bottom: 5px;
    }
</style>
@model Poco.LibraryImageText
<table cellpadding="0" class="tableShow" cellspacing="0" style="line-height: 25px;
    width: 520px">
    <tr>
        <td>
            <div id="accordion">
                <h3 style=" font-weight:bold">@Model.Title</h3>
                <div style=" height:auto">
                    <table cellpadding="0" cellspacing="0" border="0" style="line-height: 25px;">
                        <tr>
                            <td>
                                <img id="ImgShowImgText" style="max-height: 280px; max-width: 460px" src="@Model.ImagePath" />
                            </td>
                        </tr>
                        <tr>
                            <td style=" font-size:14px">
                                @Html.Raw(Model.Content)
                            </td>
                        </tr>
                    </table>
                </div>
                @if (imageTextList != null)
                { 
                    foreach (var item in imageTextList)
                    {
                        <h3  style=" font-weight:bold">
                            @item.FileTitle</h3>
                        <div style=" height:auto">
                            <table cellpadding="0" cellspacing="0" border="0" style="line-height: 25px;">
                                 <tr>
                                <td>
                                    <img id="ImgShowImgText" style="max-height: 280px; max-width: 460px" src="@item.FileUrl" />
                                </td>
                            </tr>
                            <tr>
                                <td style=" font-size:14px">
                                    @Html.Raw(item.Content)
                                </td>
                            </tr>
                            </table>
                        </div>
                    }
                }
            </div>
        </td>
    </tr>
</table>

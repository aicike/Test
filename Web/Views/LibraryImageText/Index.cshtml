@{
    
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
    var libraryType = ViewBag.LibraryType as List<Poco.LibraryType>;
    ViewBag.Menu = Poco.SystemConst.Menu.LibraryImage;
}
@section head{
    <script type="text/javascript">
    </script>
}
@model PagedList<Poco.LibraryImageText>
<div class="title">
    素材管理</div>
<div class="bodyLeft">
    <ul class="ulList" id="ulGroup">
        @foreach (var item in libraryType)
        {
            if (item.ID == (int)Poco.Enum.EnumMessageType.ImageText)
            { 
            <li class="select"><a href="@Url.Action("Index", item.Token, new { HostName = ViewBag.HostName })">@item.Name&nbsp;(@item.Count)</a>
            </li>
            }
            else
            {  
            <li><a href="@Url.Action("Index", item.Token, new { HostName = ViewBag.HostName })">@item.Name&nbsp;(@item.Count)</a>
            </li>
            }
        }
    </ul>
</div>
<div class="bodyRight">
    <div class="option">
        @Html.ActionLink("单图文消息", "Add", "LibraryImageText", new
   {
       HostName = ViewBag.HostName
   }, null, true)
        @Html.ActionLink("多图文消息", "MoreAdd", "LibraryImageText", new
   {
       HostName = ViewBag.HostName,
   }, null, true)
    </div>
    <table class="tableList" cellpadding="0" cellspacing="0">
        <tr>
            <th style="width: 130px;">
                封面图片
            </th>
            <th style="width: 460px;">
                标题
            </th>
            <th>
                操作
            </th>
        </tr>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
            <tr>
                <td>
                    <img src="@Url.Content(item.ImagePath)" style="width:130px" />
                </td>
                <td>
                    @item.Title
                </td>
                <td class="operation">
                    @if (item.LibraryImageTexts != null && item.LibraryImageTexts.Count > 0)
                    {
                        @Html.ActionLink("修改", "Edit", "LibraryImageText", new { HostName = ViewBag.HostName, id = item.ID, more = true }, null, true)
                    }
                    else
                    {
                        @Html.ActionLink("修改", "Edit", "LibraryImageText", new { HostName = ViewBag.HostName, id = item.ID }, null, true)
                    }
                    @Ajax.ActionLink("删除", "Delete", "LibraryImageText", new { HostName = ViewBag.HostName, id = item.ID },
                         new AjaxOptions() { UpdateTargetId = "alert", OnBegin = "return AppDelete('确定删除?','" + Url.Action("Delete", "LibraryImageText", new { HostName = ViewBag.HostName, id = item.ID }) + "',null)" }, true)
                </td>
            </tr>
            }
        }
    </table>
    <div class="pages">
        @Html.Pager(Model, new PagerOptions
   {
       PageIndexParameterName = "ID",
       CurrentPagerItemWrapperFormatString = "<span class=\"pagenum_selected\"><a>{0}</a></span>",
       NumericPagerItemWrapperFormatString = "<span class=\"pagenum\">{0}</span>",
       NavigationPagerItemWrapperFormatString = "<span class=\"pagenum\">{0}</span>",
       CssClass = "manage_pages pages",
       SeparatorHtml = "&nbsp;",
       AutoHide = false,
       /*LastPageText = "Last",
       FirstPageText = "First",
       PrevPageText = "Back",
       NextPageText = "Next",*/
       PageIndexOutOfRangeErrorMessage = "Page index out of range.",
       ShowFirstLast = false
   })
    </div>
</div>
<div style="clear: both">
</div>

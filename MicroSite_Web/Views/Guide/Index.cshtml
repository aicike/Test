@section head{
    <script src="@Url.Content("/Scripts/SmartWizard/jquery.smartWizard-2.0.js")" type="text/javascript"></script>
    <link href="@Url.Content("/Scripts/SmartWizard/smart_wizard_vertical.css")" rel="stylesheet" type="text/css" />
    <script type="text/javascript">
        $(document).ready(function () {
            // Smart Wizard 	
            //$('#wizard').smartWizard();
            $('#wizard').smartWizard({ transitionEffect: 'slideleft', onLeaveStep: leaveAStepCallback, onFinish: onFinishCallback, enableFinishButton: true });

            function onFinishCallback() {
                $('#wizard').smartWizard('showMessage', 'Finish Clicked');
                //                if (validateAllSteps()) {
                //                    $('form').submit();
                //                }
            }

            $("#ProvinceID").Province({ value: 0 });
            $("#CityID").City("ProvinceID");
            $("#DistrictID").District("CityID");

            function leaveAStepCallback(obj) {
                var step_num = obj.attr('rel');
                //                return validateSteps(step_num);
                if (step_num == "1") {
                    $("form").submit();
                }
                return false;
            }
        });
    </script>
    <style>
        .step_table
        {
            width: 100%;
            font-size:13px;
        }
        .step_table input
        {
            width: 200px;
        }
        .step_table_title
        {
            width: 85px;
            text-align: right;
            padding-right: 5px;
            height: 35px;
        }
        .step_table_verify
        {
            width: 300px;
        }
    </style>
}

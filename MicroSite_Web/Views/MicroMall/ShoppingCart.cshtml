@{
    ViewBag.Title = "ShoppingCart";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
@section head{
    <link href="@Url.Content("~/Scripts/ICheck/line/orange.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Scripts/ICheck/line/red.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/ICheck/icheck.js")" type="text/javascript"></script>
    <style>
        .Atype > span > span
        {
            font-size: 14px;
            font-weight: normal;
        }
        
        .MainTab
        {
            width: 100%;
            min-height: 134px;
            border: 1px solid #dbdbdb;
            box-shadow: 2px 2px 10px #909090;
            line-height: 18px;
            background-color: #fff;
            margin-bottom: 15px;
            font-size: 13px;
        }
        
        .MainTab td
        {
            border-top: 1px solid #dbdbdb;
            padding: 0px 8px;
        }
        .MainTab tr:first-child td
        {
            border-top: 0px;
            padding: 2px 8px;
        }
    </style>
    <script>
        $(function () {

            $('input').iCheck({
                checkboxClass: 'icheckbox_square-red',
                radioClass: 'iradio_square-red',
                increaseArea: '20%' // optional
            });

            $("#txtNumber").keyup(function () {
                var tmptxt = $(this).val();
                $(this).val(tmptxt.replace(/\D|^0/g, ''));
            }).bind("paste", function () {
                var tmptxt = $(this).val();
                $(this).val(tmptxt.replace(/\D|^0/g, ''));
            }).css("ime-mode", "disabled");
        })
    </script>
}
<div id="isMain" data-role="content" style="display: ">
    <table align="center" class="MainTab" cellpadding="0" cellspacing="0">
        <tr>
            <td style="height: 30px">
                <div style="float: left">
                    <input type="checkbox" id="CKB" name="ckb" checked="checked" data-role='none'>
                </div>
                <div style="float: right; color: #FFA042">
                    暂不支持货到付款</div>
                <div style="clear: both">
                </div>
            </td>
        </tr>
        <tr>
            <td style="padding: 8px 8px">
                <div style="width: 70px; height: 70px; overflow: hidden; float: left">
                    <img src="../../Images/AppDefault.png" style="min-width: 100%; min-height: 70px;
                        max-height: 70px; border-radius: 5px;" />
                </div>
                <div style="padding-left: 80px; font-size: 13px">
                    最佳答案: 天天忽悠兄。话说，这个指定。必须是全路径。不能简写？
                </div>
                <div style="padding-left: 80px; font-size: 13px; padding-top:8px;">
                    单价：<span style="color: Red; font-weight:bold">￥76</span>
                </div>
                <div style="clear: both">
                </div>
            </td>
        </tr>
        <tr>
            <td style="background-color: #ebebeb; font-size: 14px; text-align: right; height: 50px">
                <table align="right" cellpadding="0" cellspacing="0">
                    <tr>
                        <td>
                            <a href="#"></a><a href="#popupDialog" data-position-to="window" data-transition="pop"
                                data-rel="popup">
                                <img style=" width:16px; " src="@Url.Content("~/Images/Dustbin.png")" /></a>
                            <div class="ui-corner-all" id="popupDialog" style="width: 300px" data-role="popup"
                                data-overlay-theme="a" data-theme="c" data-dismissible="false">
                                <div class="ui-corner-bottom ui-content" data-role="content" data-theme="a">
                                    <div style="min-height: 50px; text-align: center; margin-top: 20px">
                                        你确定删除吗？
                                    </div>
                                    <a href="#" data-role="button" class="spanSize" style="width: 44%; font-weight: normal;"
                                        data-rel="back" data-theme="a" data-inline="true" data-corners="false">取消</a>
                                    <a href="@Url.Action("ShoppingCart", "MicroMall")" class="spanSize" style="width: 44%;
                                font-weight: normal;" data-role="button" data-transition="flow" data-theme="a"
                                    data-inline="true" data-corners="false">删除</a>
                                </div>
                            </div>
                        </td>
                        <td>
                            数量：
                            <input id="txtNumber" type="tel" value="1" data-role='none' style="width: 40px" />
                        </td>
                        <td>
                            共计： <span style="color: Red; font-weight:bold">￥76</span>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
    <table align="center" class="MainTab" cellpadding="0" cellspacing="0" style="font-size: 14px">
        <tr>
            <td style="height: 30px">
                <table align="center" style="width: 100%">
                    <tr>
                        <td style="width: 49%;">
                            <a href="#" data-role="button" data-corners="false" data-theme="c">在线支付</a>
                        </td>
                        <td>
                        </td>
                        <td style="width: 49%;">
                            <a href="#" data-role="button" data-corners="false" data-theme="c">货到付款</a>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td style="padding: 2px 0px">
                <table style="width: 100%">
                    <tr>
                        <td>
                            <input type="checkbox" id="ckbAll" checked="checked" data-role='none' />
                            全选
                        </td>
                        <td>
                            总价： <span style="color: Red">￥76</span>
                        </td>
                        <td>
                            <a href="@Url.Action("OrderConfirmation", "MicroMall")" data-role="button" data-corners="false" data-theme="b">去结算</a>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</div>

<div id="isnull" data-role="content" style="display:none ">

    <div style="text-align: center; width: 100%;margin-top: 15%;">
        <img src="@Url.Content("~/Images/ShoppingCart.png")" style=" max-width:300px; width:25%" />
    </div>
    <div style="text-align: center; font-size: 22px; ">
        你的购物车里什么都没有
    </div>
    <div style="text-align: center; width: 100%">
      
        <a href="@Url.Action("ShopIndex", "MicroMall")" class="Atype" style="width:100px; margin: 10px auto;" data-theme="d" data-role="button"
            data-corners="false">去逛逛</a>
    </div>
</div>

<!DOCTYPE html>
<html>
<head>
    @{
        var ip = Poco.SystemConst.WebUrlIP;
        }
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1,user-scalable=no">
    <script src="@ip/Scripts/jquery-1.8.3.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).bind("mobileinit", function () {
            // disable ajax nav
            $.mobile.ajaxEnabled = false
        });
    </script>
    <link href="@ip/Scripts/JqueryMobile/jquery.mobile-1.3.2.min.css"
        rel="stylesheet" type="text/css" />
    <script src="@ip/Scripts/JqueryMobile/jquery.mobile-1.3.2.min.js"
        type="text/javascript"></script>
    <script src="@ip/Scripts/blocksit.js" type="text/javascript"></script>
    <link href="@Url.Content("/Content/homeStyle.css")" rel="stylesheet" type="text/css" />
    <script>
        $(document).on("pageinit", ".myPage", function () {
            var menu = '<%=Convert.ToInt32(ViewState["menu"]) %>';
            $(".menu" + menu).addClass("ui-btn-active");
        });

        //判断是否为移动端
        var ua = window.navigator.userAgent.toLowerCase();
        if (ua.indexOf('mobile') != -1) {
            //Is mobile
        }
        else {
            //Not mobile
        }
    </script>
    @RenderSection("head", required: false)
</head>
<body>
    <div data-role="page" class="myPage">
        <div data-role="header" data-position="fixed" data-tap-toggle="false" class="ui-header ui-header-fixed ui-bar-b">
            <div data-role="navbar">
                <ul>
                    <li><a href="@Url.Action("Index","Default")" data-icon="grid" class="menu0">首页</a></li>
                    <li><a href="/Home.aspx" data-icon="grid" class="menu1">户型介绍</a></li>
                    <li><a href="/Shop.aspx" data-icon="star" data-ajax="false" class="menu2">商城</a></li>
                    <li><a href="/Center.aspx" data-icon="gear" class="menu3">个人中心</a></li>
                    <li><a href="#" data-icon="arrow-l" id="menu4">购物车</a></li>
                </ul>
            </div>
        </div>
        <!-- /container -->
        @RenderBody()
        <div data-role="footer" data-position="fixed" data-tap-toggle="false" data-theme="b">
            底部
        </div>
    </div>
</body>
</html>
